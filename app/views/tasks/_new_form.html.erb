<%= simple_form_for([@project, @task]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :title, placeholder: 'Task Title'%>
  <%= f.input :due_date, placeholder: 'Due Date'%>
  <%= f.input :estimated_time, placeholder: 'Estimated Time'%>
  <%= f.input :description, placeholder: 'Task Description'%>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
